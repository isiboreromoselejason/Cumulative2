
@{
    ViewBag.Title = "New";
}


<script>
    window.onload = function () {
        document.getElementById("create").addEventListener("click", function () {
            const xhr = new XMLHttpRequest();
            xhr.open('POST', '/Teacher/Create');
            xhr.send();
            xhr.onreadystatechange = function () {
                if (xhr.readyState === 4 && xhr.status === 200) {
                    location.href = '/Teacher/List';
                }
            }
        })
    }
</script>

<div id="containershow">
    <nav>
        <a class="navlink" href="/Teacher/List">Back To Teachers</a>
    </nav>
    <h2>New Teacher</h2>
    <form method="POST" action="/Teacher/Create">
        <div class="inputrow">
            <label for="TeacherFname">First Name:</label>
            <input type="text" id="TeacherFname" name="TeacherFname" />
        </div>

        <div class="inputrow">
            <label for="TeacherLname">Last Name:</label>
            <input type="text" id="TeacherLname" name="TeacherLname" />
        </div>

        <label for="HireDate">Hire Date:</label>
        <input type="date" id="HireDate" name="HireDate" />

        <div class="inputrow">
            <label for="EmployeeNumber">EmployeeNumber:</label>
            <input type="text" id="EmployeeNumber" name="EmployeeNumber" />
        </div>

        <div>
            <label for="Salary">Salary:</label>
            <input type="Number" id="Salary" name="Salary" />
        </div>

        <div class="inputrow">
            <button id="create">Create Teacher</button>
        </div>
    </form>
</div>
